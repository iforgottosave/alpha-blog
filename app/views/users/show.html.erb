<h1 class="text-center mt-4 mb-2">My Profile</h1>

<h3 class="text-center mb-4"><%= @user.username %></h3>

<div>
  <%= gravatar_for @user, size: 200 %>
</div>

<div class="text-center mt-4">
  <%= link_to 'Edit Profile', edit_user_path, class: "btn btn-primary" %>
</div>

<div class="text-center mt-4">
  <%= link_to 'Create Article', new_article_path, class: "btn btn-success" %>
</div>

<h3 class="text-center mt-4 mb-2">Articles</h3>

<div class="col-8 mx-auto apple_pagination mt-4 mb-4">
  <%= will_paginate @articles, :container => false %>
</div>

