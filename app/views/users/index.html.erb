<h1 class="text-center mt-4 mb-4">Alpha Bloggers</h1>

<div class="container-fluid mb-3 text-center">
  <%= link_to "Join", join_path, class: "btn btn-success btn-lg" %></button>
</div>


<div class="container">
  <% @users.each do |user| %>
    <div class="justify-content-md-center">
      <div class="col-8 mx-auto">
        <div class="card text-center shadow mt-3 mb-5 bg-white rounded">
          <div class="card-header fst-italic">
            <!--# Rails does not require 'user_path(user)', 'user' may be used -->
            <%= link_to user.username, user %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to gravatar_for(user, size: 150), user %></h5>
            <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
            <%= link_to 'View profile', user, class: "btn btn-success" %>
            <%= link_to 'Edit profile', edit_user_path(user), class: "btn btn-primary" %>
          </div>

          <div class="card-footer text-muted">
            <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
          </div
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="apple_pagination mt-4 mb-4">
  <%= will_paginate @users, :container => false %>
</div>