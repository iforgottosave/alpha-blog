<h1 class="text-center mt-4 mb-4">Categories</h1>

<div class="col-8 mx-auto apple_pagination mt-4 mb-4">
  <%= will_paginate @categories, :container => false %>
</div>

<div class="container">
  <% @categories.each do |category| %>
    <div class="justify-content-md-center">
      <div class="col-6 mx-auto">
        <div class="card text-center shadow mt-3 mb-5 bg-white rounded">
          <div class="card-body">
            <h2 class="card-title"><%= link_to category.name, category_path(category), class: "text-dark text-decoration-none"%></h2>
            <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
          </div>

          <div class="card-footer text-muted">
            <small> Created <%= time_ago_in_words(category.created_at) %> ago, edited <%= time_ago_in_words(category.updated_at) %> ago</small>
          </div
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="col-8 mx-auto apple_pagination mt-4 mb-4">
  <%= will_paginate @categories, :container => false %>
</div>